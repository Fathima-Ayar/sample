   <%= flash[:success] %>
   <%= flash[:error] %>
   <%= flash[:notice] %>
   
    <%= form_for @user do |f| %>  
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> Invalid User:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
     
<table>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      


      <%= f.label :username %>
      <%= f.text_field :username %></br>

      <%= f.label :is_female, "Gender:" %>

      <%= f.label :is_female, "Female" %><%= f.radio_button :is_female, true %> 
      <%= f.label :is_female, "Male" %><%= f.radio_button :is_female, false %> </br>

      <%= f.label :date_of_birth %>
      <%= f.date_select :date_of_birth, start_year: 1920, end_year: 2000 %></br>
    
      <%= f.label :email %>
      <%= f.email_field :email %></br>

      <%= f.label :password %>
      <%= f.password_field :password %></br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %></br>

      <%= f.label :Image %>
      <%= f.file_field :avatar %>
      
      <% if  current_user && current_user.role=='admin' %>
      <%= f.hidden_field :role, :value=>'publisher'%>
      <% elsif current_user && current_user.role=='publisher'%>
      <%= f.hidden_field :role, :value => 'publisher' %>
      <% else %>
      <%= f.hidden_field :role, :value=>'reader'%>
      <% end %>
      
      <%= f.submit "Create my account", class: "btn btn-primary" %>
  </div>
</div>

</table>
   
  <% end %>
     
    