<p><strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h4>Comments(<%= @article.comments.count %>)</h4>

<h3>Comments:</h3>
  <%= render @article.comments %>

<h4>Add a comment:</h4>
  <%= render 'comments/form' %>
   
<% if current_user.role=='publisher' %>
  <p>
    <strong>Likes:</strong>
    <%= @article.get_likes.size %>
  </p>
<% end %>
  
<% if current_user.role=='reader' %>
  <% if current_user.liked? @article %>
    <%= link_to "Dislike", dislike_article_path(@article), class: 'vote', method: :put %>
  <% else %>
    <%= link_to "Like", like_article_path(@article), class: 'vote', method: :put %>
  <% end %>
  <p>
    <strong>Likes:</strong>
    <%= @article.get_likes.size %>
  </p>
    <%= link_to "back", user_articles_path(current_user) %>
<% end %>





